{
  "dashboard": {
    "title": "TerraNeuron System Overview",
    "tags": ["terraneuron", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Service Health Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=~\"terra-.*\"}",
            "legendFormat": "{{service}}"
          }
        ]
      },
      {
        "title": "Kafka Messages Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(kafka_server_brokertopicmetrics_messagesin_total[5m])",
            "legendFormat": "Messages/sec"
          }
        ]
      },
      {
        "title": "API Request Rate (terra-ops)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{service=\"terra-ops\"}[5m])",
            "legendFormat": "{{uri}}"
          }
        ]
      },
      {
        "title": "AI Inference Time (terra-cortex)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(inference_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 inference time"
          }
        ]
      }
    ]
  }
}
